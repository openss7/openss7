@item @constant{S_OUTPUT} @tab @signal{SIGPOLL} @tab @constant{POLL_OUT} @tab band writable @tab unused
@item @constant{S_MSG} @tab @signal{SIGPOLL} @tab @constant{POLL_MSG} @tab band signaled @tab unused
