@mscript_header@

configure_modconf() { :
    #
    # For modconf entries, we remove reference to our include from the modules.conf file and then
    # add our include back to the file.
    #
    conf_old=$tmppath/modules.conf
    if [ -f $conf_old ] ; then
	conf_new=$tmppath/modules.conf.new.$$
	conf_tmp=$tmppath/modules.conf.tmp.$$
	cp -f -- $conf_old $conf_new
	sed -e '/^[[:space:]]*include[[:space:]][[:space:]]*'"$modutildir/$name"'[[:space:]]*$/d' $conf_new > $conf_tmp
	mv -f -- $conf_tmp $conf_new
	echo "include $modutildir/$name" >> $conf_new
	chmod --reference=$conf_old -- $conf_new
	cp -f -b --suffix=.rpmsave -- $conf_new $conf_old
	rm -f -- $conf_new
    fi
}

configure_preloads() { :
    #
    # For preloads we remove reference to any of our modules from the preloads file and then add
    # only our preloadable modules back to the file.
    #
    prel_old="@preload@"
    if [ -f $prel_old ] ; then
	prel_tmp=$tmppath/modprobe.preload.tmp.$$
	prel_new=$tmppath/modprobe.preload.new.$$
	cp -f -- $prel_old $prel_new
	for m in $modules ; do
	    sed -e '/^[[:space:]]*'"$m"'[[:space:]]*$/d' $prel_new > $prel_tmp
	    mv -f -- $prel_tmp $prel_new
	done
	for p in $preloads ; do
	    echo "$p" >> $prel_new
	done
        chmod --reference=$prel_old -- $prel_new
        cp -f -b --suffix=.rpmsave -- $prel_new $prel_old
        rm -f -- $prel_new
    fi
}

#
# We are configuring the installed package.
#
configure_init_postinst() { :
    #
    # At this point we want to ensure that our lines are added to the modules.conf (if necessary)
    # and that our preloads are added to the our modules or modprobe.preload file.
    #
    @WITH_KO_MODULES_FALSE@configure_modconf
    configure_preloads
    #
    # Note that init scripts are handled by debhelper additions to this script.
    #
}

subpkg=init

@mscript_postinst@

