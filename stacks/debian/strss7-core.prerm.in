@mscript_header@

#
# If we are upgrading and the upgrade is for the running kernel, or we are installing new on the
# running kernel, we have to worry about previous loaded modules for the old version or a non-deb
# version kicking around.  This scriplet kills any streams modules that are loaded and running.
#
function prerm_modules() {
    if [ ":$kversion" = ":`uname -r`" ] ; then
	for m in $KERNEL_MODULES
	do
	    if ( /sbin/lsmod | grep -q "^$m" ) ; then
#		module running, kick the stack
		/sbin/modprobe -r `/sbin/lsmod | grep "^$m" | cut -f1 '-d '`
		if ( /sbin/lsmod | grep -q "^$m" ) ; then
		    fdetach -a 2>/dev/null
		    /sbin/modprobe -r `/sbin/lsmod | grep "^$m" | cut -f1 '-d '`
		    if ( /sbin/lsmod | grep -q "^$m" ) ; then
			/usr/sbin/lsof | while read -a tokens; do
			    if [ :"$tokens[4]" = :"CHR" ]; then
				major=`echo "$tokens[5]" | sed -e 's|,.*||'`
				if [ $major -eq $STRCONF_MAJBASE ]; then
				    eval "kill -HUP $tokens[1]"
				fi
			    fi
			done
			/sbin/sleep 5 # wait for processes to die and close streams
			/sbin/modprobe -r `/sbin/lsmod | grep "^$m" | cut -f1 '-d '`
			if ( /sbin/lsmod | grep -q "^$m" ) ; then
			    echo "Cannot install or upgrade with $m module running." >&2
			    exit 1
			fi
		    fi
		fi
	    fi
	done
    fi
    return 0
}

function prerm_oldmods() {
    prerm_modules
}

function prerm_preload() {
    prel_old=$sysconfdir/$preload
    if [ -f $prel_old ] ; then
	prel_new=$tmppath/$preload.new.$$
	prel_tmp=$tmppath/$preload.tmp.$$
	cp -f $prel_old $prel_new
	for m in $KERNEL_PRELOADS ; do
	    sed -e "/^$m\>/d" $prel_new > $prel_tmp
	    mv -f $prel_tmp $prel_new
	done
	chmod --reference=$prel_old $prel_new
	cp -fb --suffix=.dpkg-save $prel_new $prel_old
	rm -f $prel_new
    fi
}

function remove_core_prerm() { :
    prerm_modules
    prerm_preload
}

function conflict_core_prerm() { :
    prerm_modules
    prerm_preload
}

function upgrade_core_prerm() { :
    prerm_modules
    prerm_preload
}

function failed_upgrade_core_prerm() { :
    prerm_oldmods
    prerm_preload
}

function deconfigure_core_prerm() { :
    prerm_modules
    prerm_preload
}

subpkg=core

@mscript_prerm@

