set -e

rootdir=@rootdir@
kversion=@kversion@
kmoduledir=@kmoduledir@
sysconfdir=@sysconfdir@
STRCONF_CONFMOD=@STRCONF_CONFMOD@
STRCONF_MAJBASE=@STRCONF_MAJBASE@
KERNEL_PRELOADS="specfs streams streams-sth streams-clone"
KERNEL_MODULES="specfs streams streams-clone streams-fifo streams-sad streams-nsdev streams-echo streams-nuls streams-pipe streams-log streams-sth streams-pipemod streams-connld streams-sc streams-svr4compat streams-suncompat streams-uw7compat streams-osfcompat streams-aixcompat streams-hpuxcompat streams-liscompat"
KERNEL_MODCONF=@STRCONF_CONFMOD@
KERNEL_SUBDIR=@PACKAGE_LCNAME@
KMODCONF_EXT=@PACKAGE_LCNAME@
ksubdir=@PACKAGE_LCNAME@
kmodext=@PACKAGE_LCNAME@
base=@PACKAGE_LCNAME@
tmppath=/var/tmp

function postinst_modconf() {
#   Check that our line is in the modules.$base file
    conf_old=$sysconfdir/modules.conf
    if ! grep -q 'include.*modules\.'$base $conf_old ; then
	streams_dirs="$kmoduledir $kmoduledir/../preferred $kmoduledir/../default $kmoduledir/../boot"
	streams_subs="$ksubdir misc streams"
	conf_new=$tmppath/modules.conf.new.$$
	cp -f $conf_old $conf_new
#	if not, check for an old non-rpm LiS
	if ( grep -q 'BEGIN LiS' $conf_old ) ; then
	    conf_tmp=$tmppath/modules.conf.tmp.$$
	    list=`find $kmoduledir/$base -name "*.o" -o -name "*.o.gz"`
	    for p in $list ; do
		f=`echo $p | sed -e 's|^.*/||'`
		m=`echo $f | sed -r -e 's|\.(k)?o(\.gz)? | |'`
#		Remove references to our modules from old installation.
		sed -e '/alias.*\<'$m'\>/d' $conf_new > $conf_tmp
		mv -f $conf_tmp $conf_new
#		Remove conflicting modules.
		for d in $streams_dirs ; do
		    for s in $streams_subs ; do
			rm -f -- $d/$s/$f $d/$s/boot/$f
		    done
		done
	    done
	    for d in $streams_dirs ; do
		for s in $streams_subs ; do
		    rmdir --ignore-fail-on-non-empty $d/$s/boot $d/$s $d
		done
	    done
	fi
#	check for forced over installs of older LiS or LfS rpm installations
#	or installs over older LiS or LfS autoconf installations
	streams_old=$kmoduledir/modules.$kmodext
	if [ -d $kmoduledir/$ksubdir -a -f $streams_old ] ; then
	    streams_new=$tmppath/modules.$kmodext.new.$$
	    streams_tmp=$tmppath/modules.$kmodext.tmp.$$
	    cp -f $streams_old $streams_new
	    list=`find $kmoduledir/$base -name "*.o"`
	    for p in $list ; do
		f=`echo $p | sed -e 's|^.*/||'`
		m=`echo $f | sed -r -e 's|\.(k)?o(\.gz)? | |'`
#		Remove references to our modules from old installation.
		sed -e '/alias.*\<'$m'\>/d' $streams_new > $streams_tmp
		mv -f $streams_tmp $streams_new
#		Remove conflicting modules.
		for d in $streams_dirs ; do
		    for s in $streams_subs ; do
			rm -f -- $d/$s/$f $d/$s/boot/$f
		    done
		done
	    done
	    for d in $streams_dirs ; do
		for s in $streams_subs ; do
		    rmdir --ignore-fail-on-non-empty $d/$s/boot $d/$s $d
		done
	    done
#	    can't make backups in modules directory
	    chmod --reference=$streams_old $streams_new
	    cp -f $streams_new $streams_old
	    rm -f $streams_new
	fi
	echo 'prune modules.$base' >> $conf_new
	echo 'if -f /lib/modules/`uname -r`/modules.$base' >> $conf_new
	echo 'include /lib/modules/`uname -r`/modules.$base' >> $conf_new
	echo 'endif' >> $conf_new
	chmod --reference=$conf_old $conf_new
	cp -fb --suffix=.rpmsave $conf_new $conf_old
	rm -f $conf_new
    fi
}

function postinst_preload() {
    @WITH_KO_MODULES_FALSE@preloads=modules
    @WITH_KO_MODULES_TRUE@preloads=modprobe.preload
    if [ -f $sysconfdir/$preloads ] ; then
	cp -f $sysconfdir/$preloads $tmppath/$preloads.new.$$
	for m in $KERNEL_PRELOADS ; do
	    echo "$m" >> $tmppath/$preloads.new.$$
	done
	chmod --reference=$sysconfdir/$preloads $tmppath/$preloads.new.$$
	cp -fb --suffix=.rpmsave $tmppath/$preloads.new.$$ $sysconfdir/$preloads
	rm -f $tmppath/$preloads.new.$$
    fi
}

function postinst_depmod() {
    if [ ":$kversion" = ":`uname -r`" ] ; then
#	this is a running kernel, do a /sbin/depmod on the modules directory for
	/sbin/depmod -ae
    elif [ -r /boot/System.map-$kversion ] ; then
#	non-running kernels a /sbin/depmod will be performed on boot by /sbin/depmod anyway
	UNAME_MACHINE=%{_target_cpu} \
	/sbin/depmod -ae -F /boot/System.map-$kversion $kversion
    fi
}

echo "@PACKAGE@-core(@VERSION@-@PACKAGE_DEBRELEASE@): $*" >&2

case "$1" in

    (configure)
	# configure-postinst configure [most-recently-configured-version]
	@WITH_KO_MODULES_FALSE@postinst_modconf
	postinst_preload
	postinst_depmod
	;;

    (abort-upgrade)
	# old-prerm upgrade new-version ... failed
	# new-prerm failed-upgrade new-version ... failed
	# old-posinst abort-upgrade new-version
	echo "@PACKAGE@-core(@VERSION@-@PACKAGE_DEBRELEASE@): $1: modules running." > &2
	;;

    (abort-remove)
	# conflict-prerm remove in-favour package new-version ... failed
	# conflict-postinst abort-remove in-favour package new-version
	echo "@PACKAGE@-core(@VERSION@-@PACKAGE_DEBRELEASE@): $1: modules running." > &2
	;;

    (abort-deconfigure)
	# deconfigure-prerm deconfigure in-favour package-being-installed version removing conflicting-package version .. failed
	# deconfigure-postinst abort-deconfigurein-favour package-being-installed-but-failed version removing conflicting-package version
	echo "@PACKAGE@-core(@VERSION@-@PACKAGE_DEBRELEASE@): $1: modules running." > &2
	;;

esac

